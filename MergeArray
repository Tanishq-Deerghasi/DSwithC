/*
Title:merge two arrays and store it into third array
  a={1,2,3}, b={10,20,30}, c={1,2,3,10,20,30}
Date:24-05-2023
Author:Tanishq Deerghasi 
*/

#include<stdio.h>
#include<stdlib.h>
int main()
{
	int *a,*b,s1,s2,i,j;
	
	printf("1st Array Enter number of elements:");
    scanf("%d",&s1);
    printf("Enter %d elements:\n",s1);
 
    a = (int*)malloc(s1 * sizeof(int));
    
    for(i=0;i<s1;i++) 
        scanf("%d",&a[i]);
        
    printf("2nd Array Enter number of elements:");
    scanf("%d",&s2);
    printf("Enter %d elements:\n",s2);
 
    b = (int*)malloc(s2 * sizeof(int));
    
    for(i=0;i<s2;i++) 
        scanf("%d",&b[i]);
    
    int c[s1+s2];
    
    for(i=0;i<s1;i++)
    	c[i]=a[i];
    
    for(i=s1,j=0;i<(s1+s2);i++,j++)
    	c[i]=b[j];
    	
    printf("Merged Array\n");
    for(i=0;i<(s1+s2);i++)
    	printf("%d\t",c[i]);  
}
